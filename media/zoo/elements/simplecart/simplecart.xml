<?xml version="1.0" encoding="utf-8"?>
<element type="simplecart" group="Simple Cart">
	<name>Simplecart</name>
	<author>Cam Gould and Nikolay Korban</author>
	<creationDate>2012</creationDate>
	<copyright>Cam Gould</copyright>
	<authorEmail></authorEmail>
	<authorUrl>http://camgould.com</authorUrl>
	<version>0.1</version>
	<description>ZOO Cart - Simplecart element for ZOO for Joomla</description>

	<params group="render">
		<param name="default_add_label" label="Deafult Add Label" type="text" default="" />
	</params>

	<params >
		<param name="spc8" label="" type="spacer" default="" />
		<param name="checkout_type" type="list" default="Paypal" label="Checkout Type" >
			<option value="PayPal">PayPal</option>
			<option value="GoogleCheckout">Google Checkout</option>
		</param>
		<param name="checkout_email" label="PayPal Email" type="text" description="PayPal email address" />
		<param name="checkout_marchantID" label="Google Marchant ID" type="text" description="Google Checkout Marchant ID" />
		<param name="checkout_currency" type="list" default="AUD" label="Currency" >
			<option value="USD">US Dollar</option>
			<option value="AUD">Australian Dollar</option>
			<option value="BRL">Brazilian Real</option>
			<option value="CAD">Canadian Dollar</option>
			<option value="CZK">Czech Koruna</option>
			<option value="DKK">Danish Krone</option>
			<option value="EUR">Euro</option>
			<option value="HKD">Hong Kong Dollar</option>
			<option value="HUF">Hungarian Forint</option>
			<option value="ILS">Israeli New Sheqel</option>
			<option value="JPY">Japanese Yen</option>
			<option value="MXN">Mexican Peso</option>
			<option value="NOK">Norwegian Krone</option>
			<option value="NZD">New Zealand Dollar</option>
			<option value="PLN">Polish Zloty</option>
			<option value="GBP">Pound Sterling</option>
			<option value="SGD">Singapore Dollar</option>
			<option value="SEK">Swedish Krona</option>
			<option value="CHF">Swiss Franc</option>
			<option value="THB">Thai Baht</option>
			<option value="BTC">Bitcoin</option>
		</param>

		<param name="spc7" label="" type="spacer" default="" />
		<param name="shippingFlatRate" label="Shipping Flat Rate" type="text" default="" />
		<param name="shippingQuantityRate" label="Shipping Quantity Rate" type="text" default="" />
		<param name="shippingTotalRate" label="Shipping Total Rate" type="text" default="" />
		
		<param name="spc6" label="" type="spacer" default="" />
		<param name="taxRate" label="Tax Rate" type="text" default="" />
		<param name="taxShipping" type="radio" default="0" label="Tax Shipping">
			<option value="0">False</option>
			<option value="1">True</option>
		</param>

		<param name="spc5" label="" type="spacer" default="" />
		<param name="image_field" label="Image Field" type="text" default="" />
		<param name="price_field" label="Price Field" type="text" default="" />
		<param name="quantity_field" label="Quantity Field" type="text" default="" />
		<param name="spc2" label="Option Fields" type="spacer" default="" />
		<param name="option1_field" label="Option 1 Field" type="text" default="" />
		<param name="option2_field" label="Option 2 Field" type="text" default="" />
		<param name="option3_field" label="Option 3 Field" type="text" default="" />
		<param name="option4_field" label="Option 4 Field" type="text" default="" />
		<param name="option5_field" label="Option 5 Field" type="text" default="" />
	</params>
</element>